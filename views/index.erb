<h1>To Doooo</h1>

<p>To do list:</p>

<ul>
  <% @todo.each() do |task| %>
  <li><%= task.description() %></li>
  <% end %>
</ul>

<p>What do you need to do?:</p>

<form action="/" method="post">
  <label for="description">Task Description</label>
  <input id="description" name="description" type="text">

  <button type="submit">Add task</button>
</form>
